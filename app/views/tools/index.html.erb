


<div class="row">
  <div class="col-sm-6">
    <h1>Herramientas</h1>
  </div>

  <div class="col-sm-6 text-right">
  <%= link_to new_tool_path, class: 'btn btn-primary' do %>
    Agregar herramienta
  <% end %>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>


            <th>Nombre</th>
            <th>Valor</th>
            <th>Disponible</th>
            <th>Bodega</th>
            <th>Estado</th>

          <th></th>
          <th></th>

      </tr>
    </thead>

    <tbody>
      <% @tools.each do |tool| %>
        <%= content_tag :tr, id: dom_id(tool), class: dom_class(tool) do %>


                      <td><%= tool.nombre %></td>
                      <td><%= tool.valor %></td>
                      <td><%= tool.disponible ? 'Si' : 'No' %></td>
                      <td><%= tool.bodega %></td>
                      <td><%= tool.estado %></td>


            <td><%= link_to 'Show', tool %></td>

            <td><%= link_to 'Borrow', new_tools_order_path(tool: tool.id) %></td>


        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
