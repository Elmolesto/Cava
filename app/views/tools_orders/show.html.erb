<div class="row">
  <div class="col-sm-6">
    <h1>Orden de <%= @tools_order.responsable %> </h1>
  </div>

  <div class="col-sm-6 text-right">  
    <% if params[:tool_id].nil? %>
      <%= link_to tools_orders_path, class: 'btn btn-primary' do %>
        Volver
      <% end %>
    <% else %>
      <%= link_to tool_path(@tools_order.tool), class: 'btn btn-primary' do %>
        Volver
      <% end %>
    <% end %>
    <%= link_to edit_tool_tools_order_path(@tools_order.tool_id,@tools_order), class: 'btn btn-primary' do %>
      Editar
    <% end %>
  </div>
</div>

<dl class="dl-horizontal">
  <dt>Cantidad:</dt>
  <dd><%= @tools_order.cantidad %></dd>

  <dt>Responsable:</dt>
  <dd><%= @tools_order.responsable %></dd>

  <dt>Status:</dt>
  <dd><%= @tools_order.status ? "Activo" : "Finalizado" %></dd>

</dl>
